{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format with Black",
            "type": "shell",
            "command": "black",
            "args": [
                "src/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Sort imports with isort",
            "type": "shell",
            "command": "isort",
            "args": [
                "--line-length=120",
                "--profile=black",
                "src/"
            ],
            "group": "build"
        },
        {
            "label": "Lint with flake8",
            "type": "shell",
            "command": "flake8",
            "args": [
                "--max-line-length=120",
                "src/"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Security check with bandit",
            "type": "shell",
            "command": "bandit",
            "args": [
                "-r",
                "src/",
                "-f",
                "json"
            ],
            "group": "test"
        },
        {
            "label": "Type check with mypy",
            "type": "shell",
            "command": "mypy",
            "args": [
                "src/",
                "--ignore-missing-imports"
            ],
            "group": "test"
        },
        {
            "label": "Run all checks",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Format with Black",
                "Sort imports with isort",
                "Lint with flake8",
                "Type check with mypy",
                "Security check with bandit"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install dev dependencies",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "-e",
                ".[dev]"
            ],
            "group": "build"
        }
    ]
}
